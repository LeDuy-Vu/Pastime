<body class="bg-light">

    
        <main>
            <div class="form-signin">
                <img class="text-center" id="logo" src="assets/images/logo.png">
                <h1 class="text-center">PASTIME</h1>
                <h2 class="text-center"> Sign up</h2>
            </div>

            <div id="space">
            <form class="" id="RegularUserSignUp" action="/aftersignup" method="post">
               
                <h4 class="h3 fw-normal" style="color: <%= inputcolor %>"> <%= FirstLine %><br /> <%= SecondLine%> </h4>
                <!-- <div class="col-md-3 col-lg-12"> -->
                <div class="row g-3">
                    <div class="col-md-6 top-buffer">
                        <label>First Name</label>
                        <input required="required" id="firstname" name="FName" class="form-control" type="text" placeholder="Joshua">
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-md-6 top-buffer">
                        <label for="">Last Name</label>
                        <input required="required" id="lastname" name="LName" class="form-control" type="text" placeholder="Appleseed">       
                        <div class="invalid-feedback">
                            Valid last name is required.
                        </div>
                    </div>

                    <div class="col-6 top-buffer">
                        <label for="inputEmail4">Email</label>
                        <input required="required" type="email" name="Email" class="form-control" id="inputEmail4" placeholder="Email">  
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>             
                    </div>

                    <div class="col-6 top-buffer">
                        <label>Password</label>
                        <input required="required" type="password" name="Pass" class="form-control" id="inputPassword4" placeholder="Password">
                    </div>
                    </div>
                    <div>
                        <button class="btn btn-dark" type="submit">Sign Up</button>
                    </div>
            </form>
            </div>
    </div>

