          <a class="navcolor1" href="#"><i class="fas fa-shopping-bag"></i></a>
        </li>
      </ul>
    </div>
  </nav>
</section>
<main>
    <section id ="top" class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Welcome, <%= MyName %></h1>
            <p class="lead text-muted">Some description of what we do and what we have to offer.</p>
            <div class="form-control col-lg-8">
              <input type="text" class="form-control col-lg-1" placeholder="Search">
              <button type="button" class="btn btn-primary btn-lg">
              <i class="fa fa-search" aria-hidden="true"></i> Search</button>
          </div>
          </div>
        </div>
    </section>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <%  newListItems.forEach(function(item){ %>
          <form class="" action="/result" method="post">
              <div class="col">
                <div class="card shadow-sm">
                    <img src="<%=item.Image%>" alt="" height="225px" width="100%">
                  <div class="card-body">

                    <input id="cityInput" readonly type="text" name="City" value="<%=item.Name%>">
                    <p class="card-text"><%=item.Description%></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button class="btn btn-sm btn-outline-secondary" type="submit">View</button>
                      </div>

                      <small class="text-muted venues"><%=item.Venue%></small>
                      <small class="text-muted"><%=item.Rating%></small>
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <%  }) %>

      </div>
    </div>
  </div>
</main>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="script.js" charset="utf-8"></script>
  </body>
</html>
