<body class="bg-light">

<div class="container">
  <main>
    <form class="" action="/afterEditActivity" method="post">
    <div class="py-5 text-center">
      <!-- <img class="d-block mx-auto mb-4" src="assets/images/tent.png" alt="" width="72" height="57"> -->
      <h1 style="text-align:center;"class="company">PASTIME</h4>
      <h4 style="text-align:center;"class="h3 mb-3 fw-normal">Edit Activity</h1>
    </div>
    <div class="row g-5">
      <div class="col-md-6 col-lg-12">
          <div class="row g-3">
            <div class="col-sm-6">
              <label>Activity Name</label>
              <input required="required" name="EditedName" class="form-control" value="<%=item.Name%>">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>
            <div class="col-sm-6">
              <label for="">Activity Description</label>
            <input required="required" name="EditedDescription" class="form-control"  value="<%=item.Description%>">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
            <div style=""class="col-6">
              <label>Date</label>
             <input type="date" class="form-control" name="EditedDate" value="<%=item.Date%>">
            </div>

            <div class="col-6">
              <label>Time</label>
            <input required="required" name="EditedTime" class="form-control" id="inputPassword4" value="<%=item.Time%>">
            </div>

            <div class="col-6">
              <label>Image URL</label>
            <input required="required" name="EditedImage" class="form-control" id="inputPassword4" value="<%=item.Image%>">
            </div>

            <div class="col-6">
              <label>Venue</label>
            <input required="required" name="EditedVenue" class="form-control" id="inputPassword4" value="<%=item.Venue%>">
            </div>

            <div class="col-6">
              <label>Longitude</label>
            <input required="required" name="EditedLongitude" class="form-control" id="inputPassword4" value="<%=item.Longitude%>">
            </div>

            <div class="col-6">
              <label>Latitude</label>
            <input required="required" name="EditedLatitude" class="form-control" id="inputPassword4" value="<%=item.Latitude%>">
            </div>

            <div class="col-6">
              <label>Price</label>
            <input required="required" name="EditedPrice" class="form-control" id="inputPassword4" value="<%=item.Price%>">
            </div>

            <div style="padding-top: 2.15rem;"class="btn1 col-6">
             <!-- <button type="submit" name="vote" value="Done" class="btn btn-primary">Done</button> -->
              <button type="submit" name="vote"  value="Delete" class="btn btn-danger">Delete</button>
            </div>
        </form>
      </div>
    </div>
  </main>

  <footer class="my-5 pt-5 text-muted text-center text-small">
